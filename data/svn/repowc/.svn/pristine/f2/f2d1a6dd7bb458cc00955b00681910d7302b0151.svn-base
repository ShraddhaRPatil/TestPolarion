	  <argument>-mail.recipient</argument>
	  <argument>VALID_MAIL_RECIPIENT</argument>
	  
	  <argument>-mail.host</argument>
	  <argument>MAIL_HOST</argument>
	  
	  <argument>-mail.port</argument>
	  <argument>MAIL_SERVER_HOST_PORT</argument>
	  
	  <argument>-mail.protocol</argument>
	  <argument>MAIL_SERVER_PROTOCOL</argument>

	  <argument>-mail.attachmentThreshold</argument>
	  <argument>MAIL_MAX_ATTACHMENT_SIZE_IN_BYTES</argument>
	  
	  <argument>-mail.auth</argument>
	  <argument>MAIL_SERVER_AUTHENTICATION_REQUIRED_TRUE_OR_FALSE</argument>
	  
