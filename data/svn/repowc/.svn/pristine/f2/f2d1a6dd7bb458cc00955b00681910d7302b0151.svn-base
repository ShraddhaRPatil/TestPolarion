	</arguments>
  </job>

  <job name="E-library Nightly Build" id="master.build" disabled="true" cronExpression="0 0 1 ? * *" scope="project:elibrary">
    <buildArtifact>elibrary:elibrary</buildArtifact>
    <buildDescriptorName>_default</buildDescriptorName>
  </job>

  <job cronExpression="0 0 21 ? * *" disabled="true" id="build.clean" name="Builds Cleanup" scope="system">
    <maxBuildAgeDays>14</maxBuildAgeDays>
    <minSuccessfulBuildsCount>7</minSuccessfulBuildsCount>
    <buildArtifacts>
        <buildArtifact>elibrary*</buildArtifact>
    </buildArtifacts>
  </job>

  <job name="Cleanup of Test Runs" id="polarion.jobs.testruns.delete" disabled="true" scope="system"/>
  
  <job cronExpression="0 0 0 ? * SUN" id="activityCleanerJob" name="Cleanup of Activities" scope="system"/>

</schedule>
