<?xml version="1.0" encoding="UTF-8"?>
<schedule>

  <job name="Cleanup of Temporary Files" id="jobs.cleanup" cronExpression="0 0 6 ? * *" scope="system">
    <preserveAgeHours>24</preserveAgeHours>
  </job>

  <job name="Index Checker" id="checker" cronExpression="0 0 23 ? * *" scope="system">
  </job>

  <job name="All Calculations" id="master.build" scope="system">
    <calculationDescriptorName>all</calculationDescriptorName>
    <localDeploymentSpaceName>_default</localDeploymentSpaceName>
  </job>

  <job name="Work Item Analysis" id="master.build" cronExpression="0 0 0 ? * *" scope="system">
    <calculationDescriptorName>trackeranalysis</calculationDescriptorName>
    <localDeploymentSpaceName>_default</localDeploymentSpaceName>
  </job>

  <job name="Work Item Analysis - Project Groups" id="master.build" cronExpression="0 50 0 ? * *" scope="system">
    <calculationDescriptorName>trackeranalysis-projectgroup</calculationDescriptorName>
    <localDeploymentSpaceName>_default</localDeploymentSpaceName>
  </job>

  <job name="Live Plan Chart Update" id="update.plan" cronExpression="0 0 * * * ? *" scope="system">
  </job>

  <job name="Repository Analysis" id="master.build" cronExpression="0 0 1 ? * MON-SAT" scope="system">
    <calculationDescriptorName>repoanalysis</calculationDescriptorName>
    <localDeploymentSpaceName>_default</localDeploymentSpaceName>
  </job>

  <job name="Process Audit" id="master.build" cronExpression="0 0 3 ? * MON-SAT" scope="system" disabled="true">
    <calculationDescriptorName>processaudit</calculationDescriptorName>
    <localDeploymentSpaceName>_default</localDeploymentSpaceName>
  </job>

  <job name="Live CMMI" id="master.build" cronExpression="0 0 4 ? * MON-SAT" scope="system">
    <calculationDescriptorName>cmmi-analysis</calculationDescriptorName> 
    <localDeploymentSpaceName>_default</localDeploymentSpaceName> 
  </job>

  <job name="Suspend DB History Creator" id="polarion.jobs.db.history.killer" disabled="true" cronExpression="0 0 8 ? * MON-FRI" scope="system"/>
  <job name="Resume DB History Creator" id="polarion.jobs.db.history" disabled="true" cronExpression="0 0 19 ? * MON-FRI" scope="system"/>

  <job name="Polarion Diagnostic Tool" id="execute.command" scope="system">
    <command>$[com.polarion.home]/diagtool/run$[shellExtension]</command>
	<arguments>
	  <argument>-sendResults</argument>
	  <argument>no</argument>
	  <argument>-resultsDir</argument>
	  <argument>$[jobDir]</argument>
