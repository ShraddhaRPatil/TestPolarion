<?xml version="1.0" encoding="UTF-8"?>
<enumeration>

    <option default="true" id="relates_to" name="relates to" oppositeName="is related to" description="A generic relation type, more concrete link should be used where possible" sortOrder="1"/>

    <option id="parent" name="has parent" oppositeName="is parent of" parent="true" sortOrder="2">
        <rule from="task" to="task"/>
        <rule from="changerequest" to="changerequest"/>
        <rule from="requirement" to="requirement"/>
        <rule from="testcase" to="testcase"/>
    </option>

    <option id="refines" name="refines" oppositeName="is refined by" parent="true" sortOrder="3">
        <rule from="requirement" to="requirement"/>
    </option>

    <option id="implements" name="implements" oppositeName="is implemented by" description="Used for traceability from Tasks to Requirements" parent="true" sortOrder="4">
        <rule from="task, defect" to="requirement"/>
    </option>

    <option id="depends_on" name="depends on" oppositeName="is depended on by" sortOrder="5">
        <rule from="task, changerequest, requirement, defect" to="task, changerequest, requirement, defect"/>
    </option>

    <option id="duplicates" name="duplicates" oppositeName="is duplicated by" sortOrder="6">
        <rule from="task, changerequest, requirement, defect" to="task, changerequest, requirement, defect"/>
    </option>

    <option id="follow_up" name="has follow-up" oppositeName="follows" sortOrder="7">
        <rule from="task, requirement, defect" to="task, requirement, defect"/>
    </option>

    <option id="verifies" name="verifies" oppositeName="is verified by" sortOrder="8">
        <rule from="testcase" to="requirement"/>
    </option>

    <option id="derived_from" name="is derived from" oppositeName="is derived by" sortOrder="9">
        <rule from="__other" to="__other"/>
    </option>

    <option id="branched_from" name="is branched from" oppositeName="has branch" sortOrder="10">
        <rule from="__other" to="__other"/>
    </option>

</enumeration>
